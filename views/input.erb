<h2>Address Book</h2>

<% @address_book.each do |contact| %>
  <p><%= contact.name %></p>
<% end %>

<form action="/" method="post">
  <div class="form-group">
    <label for="new-first-name">First Name</label>
    <input type="text" id="new_first_name" name="new_first_name">
    <label for="new_last_name">Last Name</label>
    <input type="text" id="new_last_name" name="new_last_name">
    <label for="new_phone_number">Phone Number</label>
    <input type="text" id="new_phone_number" name="new_phone_number">
  </div>
  <button type="submit" class="btn-success">Add!</button>
</form>
